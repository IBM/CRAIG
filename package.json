{
  "name": "craig",
  "version": "1.17.0",
  "description": "gui for generating ibm cloud infrastructure resources",
  "main": "index.js",
  "scripts": {
    "test": "mocha unit-tests/ --recursive --reporter-option maxDiffSize=0",
    "coverage": "npx nyc --check-coverage=true npm run test",
    "build": "cd server && npm i && cd ../client && npm i && npm run build && cp -r build ../server/",
    "client": "npm run build && open http://localhost:3000",
    "start": "NODE_ENV=production && npm run build && node server/server.js",
    "md": "node lib/docs-as-markdown",
    "changelog": "node lib/changelog-as-markdown",
    "deploy": "./deploy.sh",
    "compatibility-tests": "./compatibility.sh",
    "tf": "node lib/cli-json-to-tf.js",
    "setup": "npm i mocha -g && npm i && cd server && npm i && cd ../client && npm i",
    "front-end-test": "cd client && npm test",
    "i-all": "cd server npm i && cd ../client && npm i",
    "pretty": "npx prettier --write .",
    "dev-start": "cd client && npm start",
    "pre-commit-build": "cd client && npm run build",
    "update-templates": "node lib/template-updater.js",
    "before-commit": "npm run changelog && npm run update-templates && npm run pretty"
  },
  "authors": [
    "Jennifer Valle",
    "Isaac Eichelberger",
    "Christopher Springstead",
    "Evelyn Pirnia",
    "Alexandra Isaly",
    "Jiawe He",
    "Ayman Naji",
    "Wesley Ip",
    "Lucas Franke",
    "Connor Terech"
  ],
  "license": "ISC",
  "devDependencies": {
    "blob-stream": "^0.1.3",
    "chai": "^4.2.0",
    "form-data": "^4.0.4",
    "husky": "^9.1.7",
    "lazy-z": "1.12.1",
    "mocha": "^11.0.0",
    "nodemon": "^3.0.1",
    "nyc": "^17.0.0",
    "prettier": "^3.0.0",
    "sinon": "^21.0.0",
    "tar-stream": "^3.1.6"
  },
  "nyc": {
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  }
}
